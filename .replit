modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"
packages = ["xvfb-run", "gtk3", "glib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Electron App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "electron_app"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Quick Video Editor"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Video Editor"

[[workflows.workflow]]
name = "Electron App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm init -y && npm install electron fluent-ffmpeg ffmpeg-static ffprobe-static && npm start || electron main.js"

[[workflows.workflow]]
name = "electron_app"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm init -y && npm install electron fluent-ffmpeg ffmpeg-static ffprobe-static && npm start"

[[workflows.workflow]]
name = "Quick Video Editor"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "electron main.js --dev"

[[workflows.workflow]]
name = "Video Editor"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "DISPLAY=:99 xvfb-run -a electron main.js --dev"
